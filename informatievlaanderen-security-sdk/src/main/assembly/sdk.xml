<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>sdk</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>informatievlaanderen-security-sdk-${project.version}</baseDirectory>
	<files>
		<file>
			<source>target/dev-guide/informatievlaanderen-security-dev-guide-${project.version}.pdf</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>src/main/assembly/informatievlaanderen-security-demo-jaxws-ri.sh</source>
			<destName>informatievlaanderen-security-demo/informatievlaanderen-security-demo-${project.version}-jaxws-ri.sh</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/assembly/informatievlaanderen-security-demo-cxf.sh</source>
			<destName>informatievlaanderen-security-demo/informatievlaanderen-security-demo-${project.version}-cxf.sh</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/assembly/informatievlaanderen-security-demo-cxf.bat</source>
			<destName>informatievlaanderen-security-demo/informatievlaanderen-security-demo-${project.version}-cxf.bat</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/assembly/informatievlaanderen-security-demo-axis2.sh</source>
			<destName>informatievlaanderen-security-demo/informatievlaanderen-security-demo-${project.version}-axis2.sh</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/assembly/informatievlaanderen-security-demo-metro.sh</source>
			<destName>informatievlaanderen-security-demo/informatievlaanderen-security-demo-${project.version}-metro.sh</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/assembly/informatievlaanderen-security-demo.sh</source>
			<destName>informatievlaanderen-security-demo/informatievlaanderen-security-demo-${project.version}.sh</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/assembly/informatievlaanderen-security-demo-runtimes.sh</source>
			<destName>informatievlaanderen-security-demo/informatievlaanderen-security-demo-${project.version}-runtimes.sh</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>target/design/informatievlaanderen-security-design-${project.version}.pdf</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>../LICENSE.txt</source>
			<outputDirectory>src</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>target/client-javadoc</directory>
			<outputDirectory>informatievlaanderen-security-client-javadoc</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/src</directory>
			<outputDirectory>src</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>be.vlaanderen.informatievlaanderen.security:informatievlaanderen-security-client</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>be.vlaanderen.informatievlaanderen.security:informatievlaanderen-security-demo</include>
			</includes>
			<outputDirectory>informatievlaanderen-security-demo</outputDirectory>
		</dependencySet>
		<dependencySet>
			<excludes>
				<exclude>be.vlaanderen.informatievlaanderen.security:*</exclude>
			</excludes>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
